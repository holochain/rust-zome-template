{
  "steps": [
    {
      "command": "CARGO_TARGET_DIR=${CARGO_TARGET_DIR:-$PWD/target} && echo $CARGO_TARGET_DIR",
      "arguments": []
    },
    {
      "command": "CARGO_TARGET_DIR=${CARGO_TARGET_DIR:-$PWD/target} && cargo",
      "arguments": [
        "build",
        "--release",
        "--target=wasm32-unknown-unknown"
      ]
    },
    {
      "command": "CARGO_TARGET_DIR=${CARGO_TARGET_DIR:-$PWD/target} && wasm-gc",
      "arguments": ["$CARGO_TARGET_DIR/wasm32-unknown-unknown/release/{{ name }}.wasm"]
    },
    {
      "command": "CARGO_TARGET_DIR=${CARGO_TARGET_DIR:-$PWD/target} && wasm-opt",
      "arguments": [
        "-Oz",
        "--vacuum",
        "$CARGO_TARGET_DIR/wasm32-unknown-unknown/release/{{ name }}.wasm"
      ]
    },
    {
      "command": "CARGO_TARGET_DIR=${CARGO_TARGET_DIR:-$PWD/target} && wasm2wat",
      "arguments": [
        "$CARGO_TARGET_DIR/wasm32-unknown-unknown/release/{{ name }}.wasm",
        "-o",
        "$CARGO_TARGET_DIR/wasm32-unknown-unknown/release/{{ name }}.wat"
      ]
    },
    {
      "command": "CARGO_TARGET_DIR=${CARGO_TARGET_DIR:-$PWD/target} && wat2wasm",
      "arguments": [
        "$CARGO_TARGET_DIR/wasm32-unknown-unknown/release/{{ name }}.wat",
        "-o",
        "$CARGO_TARGET_DIR/wasm32-unknown-unknown/release/{{ name }}.wasm"
      ]
    }
  ],
  "artifact": "${CARGO_TARGET_DIR:-$PWD/target}/wasm32-unknown-unknown/release/{{ name }}.wasm"
}
